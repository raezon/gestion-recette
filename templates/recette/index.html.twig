{# templates/recette/index.html.twig #}
{% extends 'base.html.twig' %}
{% block title %}Liste des Recettes
{% endblock %}
{% block body %}
<h1 class="mt-4">Liste des Recettes</h1>
<table class="table table-striped mt-3">
	<thead>
		<tr>
			<th>ID</th>
			<th>Nom</th>
			<th>Actions</th>
		</tr>
	</thead>
	<tbody>
		{% for recette in recettes %}
			<tr>
				<td>{{ recette.id }}</td>
				<td>{{ recette.nom }}</td>
			</tr>
		</td>
	</tbody>
</tr>{% endfor %}</tbody></table>{% endblock %}
